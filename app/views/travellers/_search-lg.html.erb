<%= form_with scope: :travellers, url: '/travellers/create', local:true do %>
	  <p>
	   <%= text_field_tag :search, params[:search], placeholder: 'location', :required=> true, :class=>'form-control', :id=>'search_term_lg'%>
	  </p>

	     <p>
	   <table>
		    <%@categories.each do |category|%>
		 <tr>
		    <td>
		  <input type="checkbox" value = "<%=category.id%>" name = "experience[category_ids][]"><span class = "ml-1"><%=category.name%></span>
		    </td>
		</tr>

		<%end%>
		</table>
		  </p>

	 <%= submit_tag "New Search", :name=>nil, class: 'btn btn-success' %>


	<% end %>