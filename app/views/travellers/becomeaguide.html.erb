<div class="row d-flex justify-content-around">

	<div class="col-12 text-center">
		<h1 class="display-4">Join as a guide!</h1>
	</div>

	<div class="col-6 text-center">

		<%= form_with scope: :guide, url: '/travellers/becomeaguide', local: true do |form| %>

			<p>
    		<%= form.label :bio, 'Describe yourself as a guide', :class => 'col-form-label' %><br>
    		<%= form.text_area :bio, :class => "form-control" %>
  		</p>

			<div class="form-group">
    		<%= form.submit('Become a guide now',{:class => "btn btn-success btn-block mb-4 rounded-pill"}) %>
  		</div>
		<% end %>

		<p>(You can leave this part for later)</p>

		<div>

			<div class="text-left">
				<div class="custom-control custom-checkbox mb-3">
			    <input type="checkbox" class="custom-control-input" id="customControlValidation1" required>
			    <label class="custom-control-label" for="customControlValidation1">Above 18? (or the legal age in your country)</label>
			  </div>

			  <div class="custom-control custom-radio">
			    <input type="radio" class="custom-control-input" name="radio-stacked" required>
			    <label class="custom-control-label" for="customControlValidation2">Male</label>
			  </div>
			  <div class="custom-control custom-radio mb-3">
			    <input type="radio" class="custom-control-input" name="radio-stacked" required>
			    <label class="custom-control-label" for="customControlValidation3">Female</label>
			  </div>
			</div>

		  <div class="form-group">
		    <select class="custom-select" required>
		      <option value="">Primary occupation</option>
		      <option value="1">Alien</option>
		      <option value="2">Predator</option>
		      <option value="3">Human</option>
		    </select>
		  </div>

		  <div>
		  	<label class="">A snapshot of passport details page</label>
		  </div>

		  <div class="custom-file">
		    <input type="file" class="custom-file-input" id="validatedCustomFile" required>
		    <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
		  </div>
		</div>

	</div>
</div>