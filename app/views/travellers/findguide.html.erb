<h3 style="margin-bottom: -75px; text-align: center"class="display-4">Where are you going, <span class="text-secondary"><%= @name %></span>?</h3>

<div class="rounded" style="height: 400px; z-index: -1; background: url(https://images.unsplash.com/photo-1569261995036-70d0dd50be24?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1189&q=80) no-repeat center center fixed; background-size: cover;"></div>

	<div style = "margin-top: 20px">
	<%= form_with scope: :travellers, url: '/travellers/searchresults', local:true do %>
	  <p>
	   <%= text_field_tag :search, params[:search], placeholder: 'location', :required=> true, :class=>'form-control'%>
	  </p>


	 <div class = "container">
		<div class = "row mb-2">
		  <%@categories.each do |category|%>
		  	<div style = "margin-left: 10px">
				  <input type="checkbox" value = "<%=category.id%>" name = "experience[category_ids][]">
				  <span><%=category.name%></span>
				 </div>
			<%end%>
	</div>
</div>


	 <%= submit_tag "Find Guide", :name=>nil, class: 'btn btn-success btn-block' %>


	<% end %>
	</div>
</div>