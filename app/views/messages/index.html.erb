




<div id="msg" class="container  border p-3" style="overflow:scroll background-color: #DBD5CE">

 <% @messages.each do |message| %>
  <% if message.body %>
   <% user = User.find(message.user_id) %>
   <% if user.id == current_user.id %>
 
   
<div class="text-right p-2 rounded" > 
<span style="background-color: #FFFFFF;" class="p-3 rounded mt-2">
  <% else %>

<div class=" text-left p-2 rounded"  >
<span style="background-color: #E1F6CB" class="p-3 rounded mt-2">
  <% end %>
<strong>  <%= user.name %> </strong>: <%= message.body %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <small class="text-muted " ><%= time_ago_in_words(message.created_at) %> ago</small> 
</span>
</div>

 <% end %>
<% end %>

</div>

<div class="col mt-5">
<%= form_for [@conversation, @message], remote: true do |f| %>
<div class="form-group">
  <%= f.text_area :body, class: "form-control", id: "message_content", placeholder:"Say Something ..." %>
</div>
  <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
<div class="form-group">
  <%= f.submit "Send Reply", class: "form-control btn btn-primary" %>
</div>
<% end %>
</div>
</div>