<%# greeting banner %>
<%= render "shared/dashboardheader", locales: {:user => @user} %>
<a href="/travellers" class="btn btn-outline-secondary btn-sm mb-5">Traveller's home page</a>
<%# dashboard main %>
<div class="container">
	<div class="row mb-5">
		<div class="col-8">
			<p class="lead">Your bio: <span class="text-secondary"><%= @guide.bio %></span></p>
			<p class="lead">Completed Trips: <span class="text-secondary">0</span></p>
			<p class="lead">
				Your interests:
				<% interests = [] %>
				<% @guide.experiences.each do |experience| %>
					<% if !interests.include?(experience.category.name) %>
						<% interests.push(experience.category.name) %>
					<% end %>
				<% end %>
				<% interests.each do |interest| %>
					<span class="badge badge-pill badge-success"><%= interest %></span>
				<% end %>
			</p>
		</div>
		<div class="col-4 border-left">
			<p class="lead text-center">Your average rating:</p>
			<% if @reviews.where(guide_id: @user.guide.id).average("rating") %>
				<p class="lead text-center">
					<% average_rating = @reviews.where(guide_id: @user.guide.id).average("rating").round(1) %>
					<span><%= average_rating %></span>
				</p>
				<p class="lead text-center text-success">
					<% average_rating.to_i.times do %>
	 					<i class="fas fa-star"></i>
					<% end %>
					<% (5-average_rating.to_i).times do %>
						<i class="far fa-star"></i>
					<% end %>
				</p>
			<% else %>
				<p class="h4 text-center text-secondary">- -</p>
			<% end %>
		</div>
	</div>
</div>

<%# visible only on xs %>
<div class="d-block d-sm-none">
	<ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
	  <li class="nav-item">
	    <a class="nav-link" id="experiences-tab" data-toggle="tab" href="#experiences" role="tab">Experiences</a>
	  </li>
	  <li class="nav-item">
	    <a class="nav-link active" id="conversations-tab" data-toggle="tab" href="#conversations" role="tab">Messages</a>
	  </li>
	  <li class="nav-item">
	    <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab">Reviews</a>
	  </li>
	</ul>
	<div class="tab-content mb-5" id="myTabContent">
<%# experiences tab %>
  	<div class="tab-pane fade show" id="experiences" role="tabpanel">
			<div class="accordion" id="experience_accordion">
				<% @guide.experiences.each do |experience| %>
	  			<div class="card">
	    			<div class="card-header" id="headingOne">
	      			<h2 class="mb-0">
	        			<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#<%= experience.title %>">
	          			<%= experience.title %>
	        			</button>
	      			</h2>
	    			</div>
	    			<div id="<%= experience.title %>" class="collapse" data-parent="#experience_accordion">
	      			<div class="card-body">
	        			<%= experience.description %>
	      			</div>
	    			</div>
	  			</div>
	  		<% end %>
			</div>
			<a href="/guides/<%= @user.id %>/experiences/new" class="btn btn-block btn-success">Add Experiences</a>
		</div>
<%# conversations tab %>
	  <div class="mt-3 tab-pane fade show active" id="conversations" role="tabpanel">
	  	<% @conversations.each do |conversation| %>
  			<% if conversation.recipient_id == current_user.id %>
  				<% sender = User.find(conversation.sender_id) %>
  				<div class="alert alert-secondary d-flex justify-content-between" role="alert">
						<%= link_to sender.name, conversation_messages_path(conversation), :class => "text-dark"%>
					</div>
  			<% end %>
  		<% end %>
	  </div>
<%# reviews tab %>
	  <div class="tab-pane fade show mt-4" id="reviews" role="tabpanel">
	  	<% if !@review.where(guide_id == @user.id) %>
	  		<%byebug%>
	  		<h1 class="display-4">No reviews yet</h1>
	  	<% else %>
	  		<%byebug%>
		  	<% @reviews.each do |review|%>
		  		<% if review.guide_id == @user.id %>
		  			<div class="row mt-3 border-bottom pb-3">
	  					<div class="col-4 mt-3 text-center">
	  						<small class="lead text-center text-success">
									<% review.rating.times do %>
					 					<i class="fas fa-star"></i>
									<% end %>
									<% (5-review.rating).times do %>
										<i class="far fa-star"></i>
									<% end %>
								</small>
								<p class="mt-1">By: <strong class="text-secondary"><%= review.user.name %></strong></p>
								<small class="text-muted">On <%= review.created_at.strftime("%B %-d, %Y") %></small>
							</div>
							<div class="col-8 border rounded d-flex justify-content-center align-items-center bg-light">
								<p>"<%= review.body %>"</p>
							</div>
						</div>
					<% end %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
<%# hidden only on xs %>
<div class="container d-none d-sm-block">
	<div class="row">
<%# conversations column %>
		<div class="card col-6 px-0">
	  	<h5 class="card-header">Conversations</h5>
			<div class="card-body">
				<% @conversations.each do |conversation| %>
					<% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
						<% if conversation.sender_id == current_user.id %>
							<% recipient = User.find(conversation.recipient_id) %>
						<% else %>
							<% recipient = User.find(conversation.sender_id) %>
						<% end %>
						<span class="card-title d-flex justify-content-between">
							<%= link_to recipient.name, conversation_messages_path(conversation), :class => "text-dark lead mt-2"%>
							<a class="btn btn-outline-secondary btn-sm" href="/guides/<%=recipient.id%>/reviews/new">Leave a review</a>
						</span>
						<hr>
					<% end %>
				<% end %>
			</div>
		</div>
<%# reviews column %>
		<div class="card col-6 px-0">
	  	<h5 class="card-header">Reviews</h5>
			<div class="card-body">
				<h4>No reviews yet</h4>
			</div>
		</div>
	</div>
</div>