<h1>Hello <%= @user.name  %></h1>

<div class="container">
<div class="row">
<div class="col-8 border">
<p>Your guide profile</p>

<p><%= @guide.bio %></p>

<p>Completed Trips: 0</p>
</div>

<div class="col-4 ">
<div class="row">
<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSgz00XOgwqfQTlyHBYKegoGrV3kFsuEAHY96ZVVDzSJkD3-z2q" alt="" style="border-radius:50%; width:250px; height:250px;" class="m-auto">
</div>
<div class="row mt-2">
<div class="btn-group btn-group-toggle m-auto data-toggle="buttons">
  <label class="btn btn-primary active">
    <input type="radio" name="options" id="option1" autocomplete="off" checked> Active
  </label>
  <label class="btn btn-warning">
    <input type="radio" name="options" id="option2" autocomplete="off"> InActive
  </label>

</div>

</div>



</div>

</div>

</div>

<div class="container mt-3">
<ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="experiences" aria-selected="true">Experiences</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="messages" aria-selected="false">Messages</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">

<%# EXPERIENCES %>
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

<div class="accordion mt-3" id="accordionExample">
	<% @guide.experiences.each do |experience| %>
	  <div class="card">
	    <div class="card-header" id="headingOne">
	      <h2 class="mb-0">
	        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#<%= experience.title %>">
	          <%= experience.title %>
	        </button>
	      </h2>
	    </div>

	    <div id="<%= experience.title %>" class="collapse" data-parent="#accordionExample">
	      <div class="card-body">
	        <%= experience.description %>
	      </div>
	    </div>
	  </div>
	  <% end %>
</div>
</div>



  <%# Messages %>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
 <% @conversations.each do |conversation| %>
      <% if conversation.recipient_id == current_user.id %>

         <% sender = User.find(conversation.sender_id) %>
    
       <h3><%= link_to sender.name, conversation_messages_path(conversation)%></h3>
      <% end %>
     <% end %>
  
  </div>



  <%# REVIEWS %>
  <div class="tab-pane fade mt-4" id="contact" role="tabpanel" aria-labelledby="contact-tab">
  <% @reviews.each do |review|%>
<% if review.guide_id == @user.id %>

<div class="row mt-3 border-bottom pb-3">
<div class="col-2 mt-3">
<% review.rating.times do%>

 <i class="fa fa-star" aria-hidden="true"></i>
<% end %>

<p>Rating: <%= review.rating %></p>

<p>User: <strong><%= review.user.name %></strong> </p>
</div>

<div class="col-10 border rounded p-5" style="background-color: #F5F5F5 ">
 <p> "<%= review.body %>"</p>


<small class="text-muted">Reviewed On  <%= review.created_at.strftime("%B %-d, %Y") %></small>
</div>

</div>

<% end %>
  <% end %>
  
  </div>
</div>
</div>

<a href="/guides/<%= @user.id %>/experiences/new" class="btn btn-block btn-success mt-5">Add Experiences</a>




