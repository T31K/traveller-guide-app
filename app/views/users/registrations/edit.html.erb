<div class="row d-flex justify-content-around mb-5">
	<div class="col-sm-6">
		<img class="img-fluid" src="https://raw.githubusercontent.com/kevinngth/traveller-guide-app/master/public/login-banner.jpg"/>
	</div>

	<div class="col-sm-6 text-center">
		<h1 class="display-4">Edit Profile</h1>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		  <%= render "devise/shared/error_messages", resource: resource %>

			<div class="form-group row">
				<label class="text-left col-3 col-form-label">Display picture</label>
				<div class="col-9">
					<%= f.file_field :avatar, :class => "form-control-plaintext" %>
				</div>
			</div>

			<div class="form-group row">
		    <%= f.label :name, :class => 'text-left col-3 col-form-label' %><br />
		    <div class="col-9">
		    	<%= f.text_field :name, :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
		  	</div>
		  </div>

			<div class="form-group row">
		    <%= f.label :email, :class => 'text-left col-3 col-form-label' %><br />
		    <div class="col-9">
		    	<%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
		  	</div>
		  </div>

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  			<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
			<% end %>

	  	<div class="form-group row">
		    <%= f.label :password, :class => 'text-left col-4 col-form-label' %><br />
		    <div class="col-8">
					<%= f.password_field :password, autocomplete: "new-password", :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
		  		<% if @minimum_password_length %>
						<em>(<%= @minimum_password_length %> characters minimum, <i>leave blank if you don't want to change it</i>)</em>
					<% end %><br />
		  	</div>
		  </div>

		  <div class="form-group row">
		    <%= f.label :password_confirmation, "Confirm Password", :class => 'text-left col-4 col-form-label' %><br />
		    <div class="col-8">
		    	<%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control-plaintext bg-light border rounded-pill" %>
		  	</div>
		  </div>


			<div class="form-group row">
    		<%= f.label :current_password, :class => 'text-left col-4 col-form-label' %>
    		<div class="col-8">
    			<%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
    			<i>(we need your current password to confirm your changes)</i>
  			</div>
	  	</div>

  		<div class="actions">
    		<%= f.submit "Update", {:class => "btn btn-success btn-block mb-4 rounded-pill"} %>
  		</div>

		<% end %>

	</div>
</div>