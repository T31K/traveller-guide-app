<div class="row d-flex justify-content-around">

	<div class="col-sm-6">
		<img class="img-fluid" src="https://raw.githubusercontent.com/kevinngth/traveller-guide-app/master/public/login-banner.jpg"/>
	</div>

	<div class="col-sm-6 text-center">
		<h1 class="display-4">Register</h1>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  			<%= render "devise/shared/error_messages", resource: resource %>

			  <div class="form-group row">
			    <%= f.label :email, :class => 'text-left col-3 col-form-label' %><br />
			    <div class="col-9">
			    	<%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
			  	</div>
			  </div>

			  <div class="form-group row">
			    <%= f.label :name, :class => 'text-left col-3 col-form-label' %><br />
			    <div class="col-9">
			    	<%= f.text_field :name, :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
			  	</div>
			  </div>

			  <div class="form-group row">
			    <%= f.label :location, :class => 'text-left col-3 col-form-label' %><br />
			    <div class="col-9">
			    	<%= f.text_field :location, autofocus: true, autocomplete: "email", :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
			  	</div>
			  </div>

			  <div class="form-group row">
			    <%= f.label :password, :class => 'text-left col-4 col-form-label' %><br />
			    <div class="col-8">
    				<%= f.password_field :password, autocomplete: "new-password", :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
			  		<% if @minimum_password_length %>
	  					<em>(<%= @minimum_password_length %> characters minimum)</em>
	  				<% end %><br />
			  	</div>
			  </div>

  			<div class="form-group row">
    			<%= f.label :password_confirmation, "Confirm Password", :class => 'text-left col-4 col-form-label' %><br />
    			<div class="col-8">
    				<%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control-plaintext bg-light border rounded-pill pl-5" %>
  				</div>
  			</div>

			  <div class="actions">
			    <%= f.submit "Sign up", {:class => "btn btn-success btn-block mb-4 rounded-pill"} %>
			  </div>
			<% end %>
			<div class="mb-5">
				<%= render "users/shared/links" %>
			</div>
	</div>
</div>